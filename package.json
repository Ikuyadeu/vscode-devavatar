{
	"name": "devreplay",
	"displayName": "Devreplay",
	"description": "Devreplay for Visual Studio Code",
	"version": "0.0.5",
	"author": "Yuki Ueda",
	"publisher": "Ikuyadeu",
    "icon": "img/icon.png",
    "license": "SEE LICENSE IN LICENSE",
    "galleryBanner": {
		"color": "#444444",
        "theme": "dark"
	},
	"keywords": [
		"Coding Style",
		"Devreplay"
	],
    "repository": {
		"type": "git",
        "url": "https://github.com/Ikuyadeu/vscode-devreplay"
    },
    "bugs": {
        "url": "https://github.com/Ikuyadeu/vscode-devreplay/issues"
    },
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other",
		"Linters"
	],
	"activationEvents": [
		"onCommand:devreplay.run",
		"onCommand:devreplay.fix"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "devreplay.run",
			"title": "Run DevReplay"
		},
		{
			"command": "devreplay.fix",
			"title": "Fix by DevReplay"
		}],
		"configuration":[
			{
				"title": "devreplay",
				"properties": {
					"devreplay.ruleFile": {
						"type": "string",
						"default": "devreplay.json",
						"description": "The absolute path to the devreplay rules file"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"devreplay":"^0.1.4"
	},
	"devDependencies": {
		"typescript": "^3.5.2",
		"vscode": "^1.1.34",
		"tslint": "^5.17.0",
		"@types/node": "^12.0.8",
		"@types/mocha": "^5.2.7"
	}
}
