{
	"name": "devreplay",
	"displayName": "DevReplay",
	"description": "Devreplay for Visual Studio Code",
	"version": "1.5.0",
	"author": "Yuki Ueda",
	"publisher": "Ikuyadeu",
	"icon": "img/icon.png",
	"license": "SEE LICENSE IN LICENSE",
	"galleryBanner": {
		"color": "#FFFFFF",
		"theme": "light"
	},
	"keywords": [
		"Coding Style",
		"DevReplay"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/devreplay/vscode-devreplay"
	},
	"bugs": {
		"url": "https://github.com/devreplay/vscode-devreplay/issues"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other",
		"Linters",
		"Formatters"
	],
	"activationEvents": [
		"onCommand:devreplay.add",
		"onLanguage:python",
		"onLanguage:javascript",
		"onLanguage:java",
		"onLanguage:typescript",
		"onLanguage:r"
	],
	"contributes": {
		"commands": [
			{
				"title": "Add rules from latest change",
				"category": "devreplay",
				"command": "devreplay.add",
				"icon": {
					"light": "./img/icon.png",
					"dark": "./img/icon.png"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "devreplay.add",
					"group": "navigation",
					"when": "editorLangId == python || editorLangId == java || editorLangId == typescript || editorLangId == javascript || editorLangId == r"
				}
			]
		},
		"configuration": {
			"title": "devreplay",
			"type": "object",
			"properties": {
				"devreplay.add.save": {
					"type": "boolean",
					"default": false,
					"description": "Add rules when a file is saved"
				},
				"devreplay.rule.size": {
					"type": "integer",
					"default": 5,
					"description": "Size of max change lines when making rules"
				}
			}
		}
	},
	"main": "./client/out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/node": "^14.14.6",
		"@typescript-eslint/eslint-plugin": "^4.6.1",
		"@typescript-eslint/parser": "^4.6.1",
		"eslint": "^7.13.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsdoc": "^30.7.7",
		"json-loader": "^0.5.7",
		"merge-options": "^3.0.3",
		"rimraf": "^3.0.2",
		"ts-loader": "^8.0.10",
		"typescript": "^4.0.5"
	}
}
