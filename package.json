{
	"name": "devreplay",
	"displayName": "DevReplay",
	"description": "Devreplay for Visual Studio Code",
	"version": "1.5.2",
	"author": "Yuki Ueda",
	"publisher": "Ikuyadeu",
	"icon": "img/icon.png",
	"license": "SEE LICENSE IN LICENSE",
	"galleryBanner": {
		"color": "#FFFFFF",
		"theme": "light"
	},
	"keywords": [
		"Coding Style",
		"DevReplay"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/devreplay/vscode-devreplay"
	},
	"bugs": {
		"url": "https://github.com/devreplay/vscode-devreplay/issues"
	},
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other",
		"Linters",
		"Formatters"
	],
	"activationEvents": [
		"*"
	],
	"main": "./client/out/extension",
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"compile": "npm run compile:client && npm run compile:server",
		"compile:client": "tsc -b ./client/tsconfig.json",
		"compile:server": "tsc -b ./server/tsconfig.json",
		"watch": "npm run watch:client && npm run watch:server",
		"watch:client": "tsc -w -p client/tsconfig.json",
		"watch:server": "tsc -w -p server/tsconfig.json",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/node": "^14.14.7",
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"eslint": "^7.13.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsdoc": "^30.7.8",
		"json-loader": "^0.5.7",
		"merge-options": "^2.0.0",
		"rimraf": "^3.0.2",
		"ts-loader": "^7.0.5",
		"typescript": "^3.9.3",
		"webpack": "^5.4.0",
		"webpack-cli": "^4.2.0"
	}
}
