{
	"name": "devreplay",
	"displayName": "DevReplay",
	"description": "Generate regular expressions and linting by rules",
	"version": "1.6.0",
	"author": "Yuki Ueda",
	"publisher": "Ikuyadeu",
	"icon": "img/icon.png",
	"license": "SEE LICENSE IN LICENSE",
	"galleryBanner": {
		"color": "#FFFFFF",
		"theme": "light"
	},
	"keywords": [
		"Coding Style",
		"Regular Expression",
		"DevReplay"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/devreplay/vscode-devreplay"
	},
	"bugs": {
		"url": "https://github.com/devreplay/vscode-devreplay/issues"
	},
	"engines": {
		"vscode": "^1.54.3"
	},
	"categories": [
		"Other",
		"Linters",
		"Formatters"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"title": "Add rules from latest change",
				"category": "DevReplay",
				"command": "devreplay.add",
				"icon": {
					"light": "./img/icon.png",
					"dark": "./img/icon.png"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "devreplay.add",
					"group": "navigation",
					"when": "editorLangId == python || editorLangId == java || editorLangId == typescript || editorLangId == javascript || editorLangId == r"
				}
			]
		},
		"taskDefinitions": [
			{
				"type": "devreplay"
			}
		],
		"configuration": {
			"title": "devreplay",
			"type": "object",
			"properties": {
				"devreplay.add.save": {
					"type": "boolean",
					"default": false,
					"description": "Add rules when a file is saved"
				},
				"devreplay.rule.size": {
					"type": "integer",
					"default": 5,
					"description": "Size of max change lines when making rules"
				}
			}
		}
	},
	"main": "./client/out/extension",
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run clean && webpack --mode development --config ./client/webpack.config.js && webpack --mode development --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"watch": "tsc -b -w",
		"lint": "npm run lint:client && npm run lint:server",
		"lint:client": "eslint --config ./client/.eslintrc.json ./client/src/*.ts",
		"lint:server": "eslint --config ./server/.eslintrc.json ./server/src/*.ts",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.7.5",
		"@typescript-eslint/eslint-plugin": "^4.29.3",
		"@typescript-eslint/parser": "^4.29.3",
		"copy-webpack-plugin": "^9.0.1",
		"copyfiles": "2.4.1",
		"eslint": "^7.32.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jsdoc": "^36.0.8",
		"file-loader": "^6.2.0",
		"json-loader": "^0.5.7",
		"merge-options": "3.0.4",
		"mocha": "^9.1.1",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.2",
		"webpack": "^5.51.1",
		"webpack-cli": "^4.8.0"
	}
}
